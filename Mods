  </div>
  

  <div class="mod-card">
    <h3>pubg</h3>
    <p>Unlimited gems and resources.</p>
    <a href="#" class="download-btn" data-mod="clash">Download</a>
    <p class="downloads">Downloaded <span id="count-pubg">5278</span> times</p>
  </div>
  

  <script>
    const counters = {
      clash: parseInt(localStorage.getItem('count-clash')) || 5278,
      spotify: parseInt(localStorage.getItem('count-spotify')) || 8123,
      pubg: parseInt(localStorage.getItem('count-pubg')) || 9342,
    };
  
    function updateUI() {
      for (const mod in counters) {
        const countEl = document.getElementById(`count-${mod}`);
        if (countEl) countEl.textContent = counters[mod];
      }
    }
  
    document.querySelectorAll('.download-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const mod = btn.getAttribute('data-mod');
        counters[mod]++;
        localStorage.setItem(`count-${mod}`, counters[mod]);
        updateUI();
      });
    });
  
    updateUI();
  </script>
  

  <section id="admin" class="container" style="margin-top: 50px;">
    <h2>Admin Panel (Add Mod)</h2>
    <input type="text" id="modTitle" placeholder="Mod Name" class="admin-input" />
    <input type="text" id="modDesc" placeholder="Short Description" class="admin-input" />
    <input type="text" id="modLink" placeholder="Download Link" class="admin-input" />
    <button id="addModBtn" class="btn">Add Mod</button>
  </section>

  
  <script>
    // Add mod feature
    document.getElementById('addModBtn').addEventListener('click', () => {
      const title = document.getElementById('modTitle').value.trim();
      const desc = document.getElementById('modDesc').value.trim();
      const link = document.getElementById('modLink').value.trim();
  
      if (title && desc && link) {
        const modList = document.querySelector('.mod-list');
  
        const card = document.createElement('div');
        card.className = 'mod-card';
        card.innerHTML = `
          <h3>${title}</h3>
          <p>${desc}</p>
          <a href="${link}" target="_blank">Download</a>
          <p class="downloads">Downloaded <span>0</span> times</p>
        `;
  
        modList.appendChild(card);
  
        // Clear inputs
        document.getElementById('modTitle').value = '';
        document.getElementById('modDesc').value = '';
        document.getElementById('modLink').value = '';
      } else {
        alert("Please fill in all fields.");
      }
    });
  </script>



